{
  "manifest_version": 3,
  "name": "Doki Theme",
  "version": "1.0.0",

  "icons": {
    "16": "images/doki-theme-logo@16.png",
    "32": "images/doki-theme-logo@32.png",
    "64": "images/doki-theme-logo@64.png"
  },

  "theme": {
    "colors": {
      "bookmark_text": {{ rgb_array(manifest.colors.foregroundColor) }},
      "button_background": {{ rgb_array(manifest.colors.buttonColor) }},
      "frame": {{ rgb_array(manifest.colors.baseBackground) }},
      "frame_inactive": {{ rgb_array(manifest.colors.textEditorBackground) }},
      "frame_incognito": {{ rgb_array(manifest.colors.textEditorBackground) }},
      "frame_incognito_inactive": {{ rgb_array(manifest.colors.baseBackground) }},
      "ntp_background": {{ rgb_array(manifest.colors.baseBackground) }},
      "ntp_header": {{ rgb_array(manifest.colors.textEditorBackground) }},
      "ntp_text": {{ rgb_array(manifest.colors.foregroundColor) }},
      "omnibox_background": {{ rgb_array(manifest.colors.secondaryBackground) }},
      "omnibox_text": {{ rgb_array(manifest.colors.accentColor) }},
      "tab_background_text": {{ rgb_array(manifest.colors.foregroundColor) }},
      "tab_background_text_inactive": {{ rgb_array(manifest.colors.lineNumberColor) }},
      "tab_text": {{ rgb_array(manifest.colors.foregroundColor) }},
      "theme_toolbar": {{ rgb_array(manifest.colors.highlightColor) }},
      "toolbar": {{ rgb_array(manifest.colors.textEditorBackground) }}
    },

    "images": {
      "theme_tab_background": "images/tab_inactive.png",
      "theme_toolbar": "images/tab_highlight.png"
    },

    "properties": {
      "ntp_background_alignment": "center",
      "ntp_logo_alternate": 0
    },

    "tints": {
      "buttons": {{ hsl_array(manifest.colors.accentColor) }},
      "frame": {{ hsl_array(manifest.colors.accentColor) }}
    }
  }
}

:root {
  scrollbar-color: {{ manifest.colors.accentColor }} rgba(0, 0, 0, 0) !important;
  scrollbar-width: thin !important;
}

*::-webkit-scrollbar {
  width: 0.5em;
}

*::-webkit-scrollbar-track {
  -webkit-box-shadow: inset 0 0 6px rgba(0, 0, 0, 0);
}

*::-webkit-scrollbar-thumb {
  background-color: {{ manifest.colors.accentColor }};
}

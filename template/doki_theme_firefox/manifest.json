{
  "manifest_version": 3,
  "name": "Doki Theme",
  "version": "1.0.0",

  "browser_specific_settings": {
    "gecko": {
      "id": "dtf@sasha0552.org"
    }
  },

  "icons": {
    "16": "images/doki-theme-logo@16.png",
    "32": "images/doki-theme-logo@32.png",
    "64": "images/doki-theme-logo@64.png"
  },

  "theme": {
    "colors": {
      "bookmark_text": "&accentColor&",
      "button_background_active": "&highlightColor&",
      "button_background_hover": "&highlightColor&",
      "frame": "&baseBackground&",
      "frame_inactive": "&caretRow&",
      "icons": "&accentColor&",
      "icons_attention": "&stopColor&",
      "ntp_background": "&baseBackground&",
      "popup": "&secondaryBackground&",
      "popup_border": "&borderColor&",
      "popup_highlight": "&selectionBackground&",
      "popup_highlight_text": "&selectionForeground&",
      "popup_text": "&foregroundColor&",
      "sidebar":"&secondaryBackground&",
      "sidebar_border":"&borderColor&",
      "sidebar_highlight":"&selectionBackground&",
      "sidebar_highlight_text":"&selectionForeground&",
      "sidebar_text": "&foregroundColor&",
      "tab_background_separator": "&borderColor&",
      "tab_background_text": "&infoForeground&",
      "tab_line": "&accentColor&",
      "tab_loading": "&accentColor&",
      "tab_selected": "&highlightColor&",
      "tab_text": "&foregroundColor&",
      "toolbar": "&headerColor&",
      "toolbar_bottom_separator": "&borderColor&",
      "toolbar_field": "&textEditorBackground&",
      "toolbar_field_border": "&borderColor&",
      "toolbar_field_border_focus": "&accentColor&",
      "toolbar_field_focus": "&textEditorBackground&",
      "toolbar_field_highlight": "&selectionBackground&",
      "toolbar_field_highlight_text": "&selectionForeground&",
      "toolbar_field_text": "&infoForeground&",
      "toolbar_field_text_focus": "&accentColor&",
      "toolbar_text": "&accentColor&",
      "toolbar_top_separator": "&borderColor&",
      "toolbar_vertical_separator": "&borderColor&"
    }
  }
}
